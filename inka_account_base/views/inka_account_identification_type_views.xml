<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_inka_l10n_latam_identification_type_form" model="ir.ui.view">
        <field name="name">inka_l10n_latam.identification.type.form</field>
        <field name="model">l10n_latam.identification.type</field>
        <field name="arch" type="xml">
            <form string="Identification type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="country_id"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_inka_l10n_latam_identification_type_tree" model="ir.ui.view">
        <field name="name">inka_l10n_latam.identification.type.tree</field>
        <field name="model">l10n_latam.identification.type</field>
        <field name="arch" type="xml">
                <tree string="Tipo de Identificación">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="country_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
        </field>
    </record>

    <record id="action_identification_type" model="ir.actions.act_window">
        <field name="name">Tipos de Identificación</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_latam.identification.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
                Crea un nuevo tipo de identificación
            </p>
        </field>
    </record>

    <record id="identification_type_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inka_account_base.view_inka_l10n_latam_identification_type_form"/>
        <field name="act_window_id" ref="action_identification_type"/>
    </record>

    <record id="identification_type_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="inka_account_base.view_inka_l10n_latam_identification_type_tree"/>
        <field name="act_window_id" ref="action_identification_type"/>
    </record>


    <menuitem id="menu_action_identification_type" parent="inka_account_base.account_base_menu"
              action="inka_account_base.action_identification_type" sequence="1"/>

</odoo>
