     <!-- Tipo de Afectación en account.move -->
        <record id="view_inka_account_affection_type_inherit_account" model="ir.ui.view">
            <field name="name">account.move.affectation.type.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="before">
                    <field name="affection_id" />
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='tax_ids']" position="before">
                    <field name="affection_id" />
                </xpath>
            </field>
        </record>

          <menuitem id="account_base_menu" name="Base de Facturación" parent="account.menu_finance_configuration" groups="account.group_account_invoice,account.group_account_readonly" sequence="1">
                <menuitem id="menu_action_affection_type" action="inka_account_affection_type.action_type_affection" sequence="1"/>
                <menuitem id="menu_action_type_document" action="inka_account_table.action_account_table_type_document" groups="account.group_account_manager" sequence="3"/>
          </menuitem>

</odoo>
