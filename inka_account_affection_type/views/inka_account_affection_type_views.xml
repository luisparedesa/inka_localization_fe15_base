<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_affection_type_form" model="ir.ui.view">
        <field name="name">inka.account.affection.type.form</field>
        <field name="model">inka.account.affection.type</field>
        <field name="arch" type="xml">
            <form string="Affection type">
                <sheet>
                    <group>
                        <field name="code_at"/>
                        <field name="name"/>
                        <field name="is_visible"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_affection_type_tree" model="ir.ui.view">
        <field name="name">inka.account.affection.type.tree</field>
        <field name="model">inka.account.affection.type</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <tree string="Tipo de Afectación">
                <field name="code_at"/>
                <field name="name"/>
                <field name="is_visible"/>
            </tree>
        </field>
    </record>

    <record id="action_affection_type" model="ir.actions.act_window">
        <field name="name">Tipos de Afectación</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inka.account.affection.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo tipo de afectación
            </p>
        </field>
    </record>

    <record id="affection_type_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inka_account_affection_type.view_affection_type_form"/>
        <field name="act_window_id" ref="action_affection_type"/>
    </record>

    <record id="affection_type_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="inka_account_affection_type.view_affection_type_tree"/>
        <field name="act_window_id" ref="action_affection_type"/>
    </record>

    <!-- Tipo de Afectación en account.move -->
    <record id="view_inka_account_affection_type_inherit_account" model="ir.ui.view">
        <field name="name">account.move.affectation.type.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="before">
                <field name="affection_id" options="{'no_create': True}" optional="hide"
                       domain="[('is_visible','=',True)]"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='tax_ids']" position="before">
                <field name="affection_id" options="{'no_create': True}" optional="hide"
                       domain="[('is_visible','=',True)]"/>
            </xpath>
        </field>
    </record>


    <!-- Tipo de Afectación en account.tax -->

    <record id="view_inka_account_affection_type_inherit_account_tax" model="ir.ui.view">
        <field name="name">account.tax.affectation.type.inherit</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type_tax_use']" position="after">
                <field name="affection_id"/>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_action_affection_type" parent="inka_account_base.account_base_menu"
              action="inka_account_affection_type.action_affection_type" sequence="1"/>

</odoo>
