<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="l10n_ec_account_move" model="ir.ui.view">
		<field name="name">l10n_ec_account.move.inherit</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form"/>
		<field name="type">form</field>
		<field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button type="object" class="oe_stat_button" name="action_document_send" icon="fa-cloud-upload" attrs="{'invisible':[('state','not in',['posted'])]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Enviar a</span>
                        <span class="o_stat_text">SRI</span>
                    </div>
                </button>
                <button type="object" class="oe_stat_button" name="action_document_send" icon="fa-cloud-upload" attrs="{'invisible':[('state','not in',['posted'])]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Generar</span>
                        <span class="o_stat_text">JSON</span>
                    </div>
                </button>
                <button type="object" class="oe_stat_button" name="action_open_edi_request" icon="fa-server"
                        attrs="{'invisible':[('state','not in',['posted'])]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Registro EDI</span>
                        <span class="o_stat_text">EDI</span>
                    </div>
                </button>
            </div>
		</field>
	</record>


    <record id="view_inka_localization_account_move_journal_ec_inherit" model="ir.ui.view">
            <field name="name">account.move.journal.ec.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='accounting_info_group']" position="after">
                    <group string="request">
                        <field name="l10n_edi_request_id"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
