<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="l10n_edi_request_view_form" model="ir.ui.view">
        <field name="name">l10n.edi.request.form</field>
        <field name="model">l10n_edi.request</field>
        <field name="arch" type="xml">
            <form string="EDI Request" create="false">
                <sheet>
                    <div>
                        <h1 class="mt0">
                            <field name="name" readonly="True" attrs="{'invisible':[('name', '=', '/')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group name="information" string="Information">
                            <field name="document_number" widget="document_number" string="N° Factura"/>
                            <field name="partner_id" widget="partner_id" string="Cliente"/>
                            <field name="document_type" widget="document_type" string="Tipo de documento"/>
                            <field name="document_date" widget="document_date" string="Fecha de emisión"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
